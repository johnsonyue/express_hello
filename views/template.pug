           button(
             type="button"
             class="navbar-toggle collapsed"
             data-toggle="collapse"
             data-target="#navbar"
             aria-expanded="false"
             aria-controls="navbar"
           )
             span(class="sr-only") Toggle navigation
             span(class="icon-bar")
             span(class="icon-bar")
             span(class="icon-bar")
