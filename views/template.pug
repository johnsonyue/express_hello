               a
                 span(
                   id="notification_badge"
                   class="badge progress-bar-danger"
                   style="display: none;") 1
             li
               a(href="#") Login

    div(class="container-fluid")
      div(class="row")
        div(class="col-md-2 sidebar")
          ul(class="nav nav-sidebar")
            li
              a overview
          ul(class="nav nav-sidebar")
            li
              a statistics
            li
              a map
          ul(class="nav nav-sidebar")
            li(class="active")
              a router
        div(class="col-md-10 col-md-offset-2 main")
